 @import url('https://fonts.googleapis.com/css?family=Nunito+Sans')

 html *
    font-family: Nunito Sans;

 .app-toolbar
   color: #003366;
   border: #003366 1px;
   // height :80px
   padding-left: 0 !important;


 h1 {
   margin-top: 0.5rem !important;
   margin-bottom: 1rem;
   margin-left: 1rem;
   margin-right: 1rem;
 }

 h1, h2, h3 {
   color: var(--v-background-base) !important;
 }

 a {
   font-weight: 600;
 }

 /* Themed header colors */
 .primary-heading,
 .primary-heading i {
   color: var(--v-background-base) !important;
 }

 .sub-header-large {
   font-weight: bold;
   font-size: 18px;
   width: auto;
   padding-left: 2%;
   margin-right: 1rem;
   white-space nowrap;
 }

 /* Vertically center expansion panel items */
 .v-expansion-panel__header > *:not(.v-expansion-panel__header__icon) {
   -webkit-box-flex: 1;
   -ms-flex: 1 1 auto;
   flex: 1 1 auto;
   align-items: center;
   display: flex;
 }

 /* Hack to fix flex alignment overflow, vuetify styling can be a little whack */
 .container.grid-list-xl .layout .flex {
   padding: 12px 0;
 }

 .container.grid-list-xl .layout:only-child {
   margin: 0;
 }
 /* END Hacks */

 .theme--light.v-table thead th {
   color: rgba(0,0,0,0.666);
 }

 /* <form> is used in v-layout, force full width by default */
 form {
   width: 100%;
   display: flex;
   flex-flow: row wrap;
 }

 /* Form input base styles */
 .theme--light.v-label {
   color: #65799D; // Color of the BC mountains
 }

 .v-text-field__prefix,
 .theme--light.v-icon,
 .v-input__icon .v-input__icon--prepend {
   color: #65799D; // Color of the BC mountains
 }

 .theme--light.v-text-field > .v-input__control > .v-input__slot:before {
   border-color: #65799D; // Color of the BC mountains
 }

 .v-list__tile--active .v-list__tile__action:first-of-type .v-icon {
   color: var(--v-background-base) !important;
 }

 .theme--light.v-list {
   color: var(--v-background-base) !important;
 }

 @media only screen and (min-width: 1264px) {
   .container {
     max-width: 100%;
   }
 }

   /* Tab headings */
 .v-tabs__div {
   -webkit-box-align: center;
   -ms-flex-align: center;
   align-items: center;
   display: -webkit-inline-box;
   display: -ms-inline-flexbox;
   display: inline-flex;
   -webkit-box-flex: 0;
   -ms-flex: 0 1 auto;
   flex: 0 1 auto;
   font-size: 14px;
   font-weight: 500;
   line-height: normal;
   height: inherit;
   max-width: 264px;
   text-align: center;
   text-transform: none;
   vertical-align: middle;
   color: var(--v-background-base) !important;
 }

 /*.side-nav-margin,
   .application--wrap {
     margin-left: 300px !important;
   }*/

 .v-navigation-drawer {
   /* Override absolute */
   /* Override inline style */
   margin-top: 58px !important;
 }

 .v-navigation-drawer [class*="fa-caret"],
 .v-navigation-drawer [class*="fa-chevron"] {
   font-size: 1rem;
 }

 .v-navigation-drawer [class*="fa-chevron"] {
   font-size: 0.75rem;
 }

 /* Vuetify has built in margin and padding helpers,
   but we want to enforce a global style on form fields */
 .v-form-container
  padding: 0rem 2rem 0;

 fieldset {
   padding-top: 1rem;
   padding-bottom: 3rem;
   border-color: grey;
 }

 fieldset legend {
   font-weight: bold;
   font-size: 1.3rem;
 }

 .v-text-field__details {
  // display: none;
 }

 .v-datatable thead th.column.sortable .v-icon {
   color: rgba(0, 0, 0, 0.38);
   position: relative;
   right: -0.5rem;
 }



 table.v-table thead td:not(:nth-child(1)),
 table.v-table tbody td:not(:nth-child(1)),
 table.v-table thead th:not(:nth-child(1)),
 table.v-table tbody th:not(:nth-child(1)) {
   padding: 0 0.5rem;
 }

 /*table.v-table thead td:last-child,
   table.v-table tbody td:last-child,*/
 table.v-table thead th:last-child,
 table.v-table tbody th:last-child {
   padding: 0 24px 0 0;
   padding: 0 24px 0 0;
 }

 table.v-table thead td:not(:nth-child(1)),
 table.v-table tbody td:not(:nth-child(1)),
 table.v-table thead th:not(:nth-child(1)),
 table.v-table tbody th:not(:nth-child(1)),
 table.v-table thead td:first-child,
 table.v-table tbody td:first-child,
 table.v-table thead th:first-child,
 table.v-table tbody th:first-child {
   padding: 0 12px 0 24px;
 }

 /* Vuetify fields are way too big */
 .v-text-field--box .v-input__slot,
 .v-text-field--outline .v-input__slot {
   min-height: auto !important;
   display: flex !important;
   align-items: center !important;
   border-color: lightgrey !important;
   border-radius: 0 !important;
   border-width: 1px !important;
 }

 .v-text-field--box input,
 .v-text-field--full-width input,
 .v-text-field--outline input,
 .v-text-field--box select,
 .v-text-field--full-width select,
 .v-text-field--outline select {
   margin-top: 0 !important;
 }

 .v-select__selections {
   padding-top: 0 !important;
 }

 .v-select .v-icon {
   font-size: 1rem !important;
   position: relative;
   right: -0.5rem;
 }

 .v-text-field.v-text-field--enclosed .v-input__prepend-outer,
 .v-text-field.v-text-field--enclosed .v-input__prepend-inner,
 .v-text-field.v-text-field--enclosed .v-input__append-inner,
 .v-text-field.v-text-field--enclosed .v-input__append-outer {
   margin-top: 3px;
 }

 .v-text-field--box .v-label,
 .v-text-field--full-width .v-label,
 .v-text-field--outline .v-label {
   top: 0.5rem;
 }

 /* Equalize field margins */
 .v-text-field.v-text-field--enclosed .v-text-field__details,
 .v-text-field.v-text-field--enclosed > .v-input__control > .v-input__slot {
   margin-bottom: 8px;
   margin-top: 8px;
 }

 /* Grid swimlanes */
 .lane {
   display: flex;
   border-bottom: 1px solid lightgrey;
 }

 .lane-label {
   width: 3rem;
   background: var(--v-background-base) !important;
   position: relative;
 }

 .lane-label.dark {
   background: #000 !important;
 }

 .lane-label-text {
   /* text-orientation: sideways; */
   position: absolute;
   transform: rotate(270deg);
   top: 50%;
   /* position: relative; */
   left: 1rem;
   font-weight: bold;
   color: white;
   display: inline-flex;
   white-space: nowrap;
   width: 1rem;
 }

 .lane-content {
   display: flex;
   flex: 1 1 100%;
 }

 .lane-content > * {
   flex: 1 1 100%;
 }

 table tr {
   background: white;
   overflow: hidden;
 }
.row-background{
  cursor:pointer;
}
 .row-background-highlight {
   //background-color: var(--v-background-accent) !important;
   background-color: #82B1FF;
 }

 .row-background-grey {
   background-color: #ddd;
 }

 .row-background-lightgrey {
   background-color: #efefef;
   cursor:pointer;
 }

 .v-form-actions {
   text-align: right;
 }

 /* !important override utils */
 .ml-0-i {
   margin-left: 0 !important;
 }

 .mr-0-i {
   margin-right: 0 !important;
 }

 .mt-0-i {
   margin-top: 0 !important;
 }

 /* Override snackbar make it full width */
 .v-snack__wrapper {
   width: 100%;
   max-width: none;
   /*padding-left: 300px;*/
   z-index: 5000;
 }

 .v-snack__content {
   justify-content: center !important;
 }

 /* Make notifications slide under the main nav toolbar when scrolling */
 .v-toolbar--fixed {
   z-index: 5001;
 }

 .v-navigation-drawer--mini-variant
    overflow: visible;

 .navdraw-mini-expander
    float: right;
    margin-right: 20px;
    margin-top:14px;
    box-shadow: 0px 1px 4px 0px rgba(68, 68, 68, 0.25) !important;
    .v-icon
      font-size: 20px;

