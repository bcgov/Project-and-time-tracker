{
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "annotations": {
      "description": "Deployment template for timemachine-api",
      "tags": "npm"
    },
    "name": "timemachine-api"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "ImageStream",
      "metadata": {
        "annotations": {
          "description": "timemachine-api node image stream"
        },
        "name": "${SOURCE_NAME}"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "replicas": 2,
        "selector": {
          "app": "${NAME}",
          "deploymentconfig": "${NAME}"
        },
        "strategy": {
          "rollingParams": {
            "intervalSeconds": 1,
            "maxSurge": "25%",
            "maxUnavailable": "25%",
            "timeoutSeconds": 600,
            "updatePeriodSeconds": 1
          },
          "type": "Rolling"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "app": "${NAME}",
              "deploymentconfig": "${NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "${SOURCE_NAME}",
                "imagePullPolicy": "Always",
                "name": "${NAME}",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "resources": {
                  "requests": {
                    "cpu": "100m",
                    "memory": "100Mi"
                  },
                  "limits": {
                    "cpu": "250m",
                    "memory": "200Mi"
                  }
                }
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "securityContext": {
            },
            "terminationGracePeriodSeconds": 30,
          }
        },
        "test": false,
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_NAMESPACE}",
                "name": "${SOURCE_NAME}:${TAG_NAME}"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "ports": [
          {
            "name": "8080-tcp",
            "port": 8080,
            "protocol": "TCP",
            "targetPort": 8080
          }
        ],
        "selector": {
          "app": "${NAME}",
          "deploymentconfig": "${NAME}"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "host": "${APPLICATION_DOMAIN}",
        "port": {
          "targetPort": "8080-tcp"
        },
        "tls": {
          "insecureEdgeTerminationPolicy": "Redirect",
          "termination": "edge"
        },
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        }
      }
    }
  ],
  "parameters": [
    {
      "description": "The name of the source image",
      "displayName": "Source Name",
      "name": "SOURCE_NAME",
      "required": true,
      "value": "timemachine-api"
    },
    {
      "description": "The name assigned to all of the openshift objects defined in this template. It is also the name of runtime image you want.",
      "displayName": "Name",
      "name": "NAME",
      "required": true,
      "value": "timemachine-api"
    },
    {
      "description": "The exposed hostname that will route to the service, e.g., myappname.pathfinder.gov.bc.ca, if left blank a value will be defaulted.",
      "displayName": "Application Hostname",
      "name": "APPLICATION_DOMAIN",
      "value": "timemachine-api-aifsul-dev.pathfinder.gov.bc.ca"
    },

    {
      "description": "The namespace where to get the above image name",
      "displayName": "Image Namespace",
      "name": "IMAGE_NAMESPACE",
      "required": true,
      "value": "aifsul-tools"
    },
    {
      "description": "The TAG name for this environment, e.g., dev, test, prod",
      "displayName": "Env TAG name",
      "name": "TAG_NAME",
      "value": "dev"
    }
  ]
}